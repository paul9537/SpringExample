<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.paul9537.ex.lesson04.dao.StudentDAO">

	<insert id="insertStudent" parameterType="com.paul9537.ex.lesson04.model.Student"
	useGeneratedKeys="true" keyProperty="id">
	
		INSERT INTO `new_student`
		(
			`name`
			, `phoneNumber`
			, `email`
			, `dreamJob`
			, `createdAt`
			, `updatedAt`
		)
		VALUE (
			#{name}
			, #{phoneNumber}
			, #{email}
			, #{dreamJob}
			, now()
			, now()
		)
	
	</insert>

</mapper>
